<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="@string/user_engagement_fragment_profile_registered_text"
        />
    <TextView
        android:id="@+id/pinpoint_profile_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="@string/user_engagement_fragment_campaign_instruction_text"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pinpoint_winter_label"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pinpoint_switch_winter"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/pinpoint_winter_switch_text"
            android:gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <Switch
            android:id="@id/pinpoint_switch_winter"
            android:layout_toRightOf="@id/pinpoint_winter_label"
            android:layout_toEndOf="@id/pinpoint_winter_label"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/pinpoint_spring_label"
            android:layout_below="@id/pinpoint_winter_label"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pinpoint_switch_spring"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/pinpoint_spring_switch_text"
            android:gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <Switch
            android:id="@id/pinpoint_switch_spring"
            android:layout_toRightOf="@id/pinpoint_spring_label"
            android:layout_toEndOf="@id/pinpoint_spring_label"
            android:layout_below="@id/pinpoint_switch_winter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/pinpoint_summer_label"
            android:layout_below="@id/pinpoint_spring_label"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pinpoint_switch_summer"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/pinpoint_summer_switch_text"
            android:gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <Switch
            android:id="@id/pinpoint_switch_summer"
            android:layout_below="@id/pinpoint_switch_spring"
            android:layout_toRightOf="@id/pinpoint_summer_label"
            android:layout_toEndOf="@id/pinpoint_summer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/pinpoint_fall_label"
            android:layout_below="@id/pinpoint_summer_label"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pinpoint_switch_fall"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/pinpoint_fall_switch_text"
            android:gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <Switch
            android:id="@id/pinpoint_switch_fall"
            android:layout_below="@id/pinpoint_switch_summer"
            android:layout_toRightOf="@id/pinpoint_fall_label"
            android:layout_toEndOf="@id/pinpoint_fall_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</LinearLayout>
