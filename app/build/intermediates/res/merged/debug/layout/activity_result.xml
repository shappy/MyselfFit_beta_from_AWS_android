<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mysampleapp.ResultActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:background="@color/cardview_dark_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:alpha="0.7"
        android:layout_height="130dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBfLable"
            android:layout_gravity="center_horizontal|top"
            android:text="Your Body fat is:"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            android:textSize="20sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:id="@+id/textViewBf"
            android:layout_gravity="center_horizontal|center"
            android:text="8%"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            android:textSize="40sp"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <Button
        android:text="ReScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ReScanButton"
        android:layout_alignTop="@+id/control"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:backgroundTint="@color/splash_text" />

</RelativeLayout>
